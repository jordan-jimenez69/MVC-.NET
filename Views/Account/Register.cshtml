@model MVC.Models.AccountModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Inscription</h2>

            <form asp-controller="Account" asp-action="Register" method="post">
                <div class="mb-3">
                    <label for="Name" class="form-label">Nom</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Nom" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="FirstName" class="form-label">Prénom</label>
                    <input type="text" class="form-control" id="FirstName" name="FirstName" placeholder="Prénom" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Role" class="form-label">Rôle</label>
                    <select asp-for="Role" asp-items="Html.GetEnumSelectList<RoleType>()" class="form-select">
                        <option value="">-- Sélectionnez un rôle --</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="PasswordHashed" class="form-label">Mot de passe</label>
                    <input type="password" class="form-control" id="PasswordHashed" name="PasswordHashed" placeholder="Mot de passe" />
                    <span asp-validation-for="PasswordHashed" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="ConfirmedPassword" class="form-label">Confirmer le mot de passe</label>
                    <input type="password" class="form-control" id="ConfirmedPassword" name="ConfirmedPassword" placeholder="Confirmer le mot de passe" />
                    <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <input type="submit" value="Créer" class="btn btn-primary w-50" />
                </div>
            </form>

            <div class="text-center mt-3">
                <a href="@Url.Action("Login", "Account")" class="link link-secondary">Déjà inscrit ? Connectez-vous</a>
            </div>
        </div>
    </div>
</div>
