@model MVC.Models.AccountModel

<div class="container py-4">
    <div class="d-flex justify-content-center">

                <div class="container">
                    <h2>Inscription</h2>

            <form asp-controller="Account" asp-action="Register" method="post">
                <div class='mb-3 w-50'>
                    <input type="text" name="Name" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class='mb-3 w-50'>
                    <input type="text" name="FirstName" placeholder="FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class='mb-3 w-50'>
                    <input type="password" name="PasswordHashed" placeholder="Password" />
                    <span asp-validation-for="PasswordHashed" class="text-danger"></span>
                </div>
                <div class='mb-3 w-50'>
                    <input type="password" name="ConfirmedPassword" placeholder="Confirmed Password" />
                    <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                </div>

                <input type="submit" value="Create" class="btn btn-primary">
            </form>
                </div>
                    <a class="link link-secondary" asp-action="Login" asp-controller="Account">Login</a>
            </div>
        </div>