@model LoginModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Connexion</h2>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.Error
                </div>
            }

            <form method="post" asp-action="Login">
                <div class="mb-3">
                    <label for="UserName" class="form-label">Nom d'utilisateur</label>
                    <input type="text" class="form-control" id="UserName" name="UserName" required />
                </div>

                <div class="mb-3">
                    <label for="PasswordHashed" class="form-label">Mot de passe</label>
                    <input type="password" class="form-control" id="PasswordHashed" name="PasswordHashed" required />
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary w-50">Se connecter</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <a href="@Url.Action("Register", "Account")" class="link link-secondary">Pas encore inscrit ? Créez un compte</a>
            </div>
        </div>
    </div>
</div>
