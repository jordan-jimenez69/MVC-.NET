@model MVC.Models.Event

<h1>Créer un nouvel event</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title" class="form-label">Titre</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date" class="form-date">Date</label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location" class="form-label">Localisation</label>
        <input asp-for="Location" class="form-control" type="number" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-success">Créer</button>
    <a asp-action="Index" class="btn btn-secondary">Retour</a>
</form>
