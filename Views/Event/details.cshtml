@model MVC.Models.Event

<h2>Détails de l'Événement</h2>

<div class="card">
    <div class="card-header">
        <h4>@Model.Title</h4>
    </div>
    <div class="card-body">
        <p><strong>Description :</strong> @Model.Description</p>
        <p><strong>Date :</strong> @Model.Date.ToString("dd/MM/yyyy")</p>
        <p><strong>Lieu :</strong> @Model.Location</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Retour à la liste</a>
