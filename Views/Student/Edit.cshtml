@model MVC.Models.Student

<h1>Modifier les informations de l'étudiant</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Nom</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">Prénom</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Age" class="form-label">Âge</label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Major" class="form-label">Spécialité</label>
        <select asp-for="Major" class="form-select" asp-items="Html.GetEnumSelectList<Major>()"></select>
        <span asp-validation-for="Major" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Sauvegarder</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
