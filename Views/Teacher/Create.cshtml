@model MVC.Models.Teacher

<h1>Créer un nouvel enseignant</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-label">Nom</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FirstName" class="form-label">Prénom</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="email" name="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Mot de passe</label>
        <input type="password" name="Password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Créer</button>
    <a asp-action="Index" class="btn btn-secondary">Retour</a>
</form>
