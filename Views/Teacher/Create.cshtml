@model MVC.Models.Teacher

<h1>Créer un nouvel enseignant</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-label">Nom</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FirstName" class="form-label">Prénom</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age" class="form-label"></label>
        <input asp-for="Age" class="form-control" type="number" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Subject" class="form-label">Sujet</label>
        <select asp-for="Subject" class="form-control" asp-items="Html.GetEnumSelectList<MVC.Models.Subject>()">
            <option value="">-- Sélectionnez un département --</option>
        </select>
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Créer</button>
    <a asp-action="Index" class="btn btn-secondary">Retour</a>
</form>
