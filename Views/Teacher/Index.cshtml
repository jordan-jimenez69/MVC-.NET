@model IEnumerable<MVC.Models.Teacher>

<h1>Liste des enseignants</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Name</td>
                <td>@teacher.FirstName</td>
            </tr>
        <td>
            <a asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-warning">Modifier</a>
            <form asp-action="Delete" method="post" style="display:inline;">
                <input type="hidden" name="id" value="@teacher.Id" />
                <button type="submit" class="btn btn-danger">Supprimer</button>
            </form>
        </td>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Ajouter un enseignant</a>
